{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "esNext",
        "lib": [
            "dom",
            "es2015",
            "esnext"
        ],
        "baseUrl": "./",
        "paths": {
            "*": [ "./client/pkg/*" ]
        },
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "jsx": "react",
        "target": "es2017"
    },
    "exclude": [
        "node_modules"
    ]
}